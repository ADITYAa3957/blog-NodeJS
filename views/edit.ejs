<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Page</title>
    <link rel="stylesheet" href="/dashboardStyles.css">
</head>
<body>
    <nav>
        <p id="logo">BestBlogs</p>
        <a href="/dashboard" >Admin Panel</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <a href="/add-admin">Add Admin</a>
        <a href="/logout" class="logout-btn">Logout</a>
      </nav>
    <form action="/edit/<%= blog._id %>?_method=PATCH" method="post" class="edit-form">
        <div class="edit-item">
            <label for="title">Title:</label>
            <input type="text" name="title" id="title">
        </div>
        <div class="edit-item">
            <label for="body">Body:</label>
            <textarea name="body" id="body" cols="30" rows="20" ></textarea>
        </div>
        <button type="submit" class="save-btn">Save</button>
    </form>
    <script>
        //filling the previous data of blogs in the fields
        const content = `<%= blog.body %>`;
        const title =  `<%= blog.title %>`;
        // console.log(content);
        const titleInput = document.querySelector("input#title");
        const textareaInput = document.querySelector("textarea");
        titleInput.value = title;
        textareaInput.value = content;
    </script>
</body>
</html>